<div id="post-<%= post._id %>" class="post-container mt-3">
    <li>
        <%= post.user.name %> - <%= post.content %>
        <% if(locals.user && locals.user.id == post.user.id) { %> 
            - <a href="posts/destroy/<%= post.id %>" class="post-delete-button">delete</a>
        <% } %>
    </li>
    <div class="post-comments">
        <% if(locals.user) { %> 
            <form action="/comments/create" class="add-comment-form" method="post">
                <input type="text" name="content" placeholder="Write a comment..." required>
                <input type="hidden" name="post" value="<%= post._id %>" required>
                <button type="submit">Add comment</button>
            </form>
        <% } %>
        <div class="post-comments-container">
            <ul id="post-comments-<%= post._id %>" class="post-comments-list">
                <% for(comment of post.comments) { %> 
                    <%- include('_comment') -%>
                <% } %>
            </ul>
        </div>
    </div>
</div>