<% if(locals.user) { %>

    <div id="user-chat-box" class="h-full w-full relative bg-slate-500 border border-white">
        <ul id="chat-messages-list" class="space-y-2 p-2 pt-3 text-white">
            <li class="px-2 py-1 w-fit max-w-[80%] bg-cyan-500 rounded-lg">
                <span> Hey! </span>
            </li>
            <li class="px-2 py-1 float-right w-fit max-w-[80%] bg-lime-500 rounded-lg">
                <span> Hi there. </span>
            </li>
        </ul>
        <div id="chat-message-input-container" class="w-full absolute bottom-0 flex">
            <input id="chat-message-input" placeholder="Type message here" class="flex-1 px-2">
            <button type="submit" id="send-message" class="px-2"> <i class="bi bi-send-fill text-white"></i> </button>
        </div>
    </div>
    
<% } %>
