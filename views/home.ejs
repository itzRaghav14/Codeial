<link rel="stylesheet" href="/css/home.css">

<main class="min-h-screen bg-[var(--dominant)]">

	<section class="h-full w-4/5 mx-auto p-5 grid grid-cols-12 gap-5">

		<!-- left section -->
		<section class="col-span-3">
	
		</section>
	
		<!-- main section -->
		<section class="col-span-6">
		
			<% if(locals.user) { %>
				<div class="py-2 px-3 bg-[var(--complementary)] rounded-3xl">
					<form action="/posts/create" id="new-post-form" class="grid grid-cols-12 w-full" method="post">
						<input type="text" name="content" id="add-post-content" placeholder="What's on your mind, <%= user.name %>?" class="bg-inherit col-span-10 focus:outline-0 text-white" required>
						<div class="col-span-2 flex justify-center items-center">
							<button type="submit" class="w-full px-2 py-1 bg-[var(--accent)] text-white rounded-2xl">Post</button>
						</div>
					</form>
				</div>
			<% } %>
		
			<div id="posts-list-container" class="mt-5">
				<ul id="posts-list" class="space-y-4">
					<% for(post of locals.posts) { %>
						<%- include('_post') -%>
					<% } %>
				</ul>
			</div>
	
		</section>
	
		<section id="user-friends" class="col-span-3 text-white">
			<h4 class="text-3xl font-semibold">Friends</h4>
			<ul>
				<% for(friend of all_users) { %>
					<li>
						<a href="users/profile/<%= friend.id %>"> <%= friend.name %> </a>
					</li>
				<%} %>
			</ul>
		</section>

	</section>

	<section class="chat-box-outer-container h-64 w-64 fixed right-4 bottom-4">
		<%- include('_chat_box') -%>
	</section>


</main>

<script src="/js/home_comments.js" type="text/javascript"></script>
<script src="/js/home_posts.js" type="text/javascript"></script>
<script src="/js/toggle_likes.js" type="text/javascript"></script>